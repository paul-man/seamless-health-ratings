{
  "manifest_version": 2,
  "name": "Grubless NYC Health Ratings",
  "version": "4.0",

  "description": "Searches for NYC health ratings while browsing the Seamless and Grubhub websites.",

  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "permissions": [
    "*://data.cityofnewyork.us/resource/*",
    "activeTab",
    "tabs",
    "webNavigation",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.seamless.com/menu*", "*://grubhub.com/restaurant/*"],
      "css": ["/src/grubless-health.css"]
    }
  ],
  "background": {
    "scripts": ["/src/background.js"],
    "persistent": true
  },
  "browser_action": {
    "browser_style": true,
    "default_popup": "/src/popup/health-rating-info.html",
    "default_title": "Grubless NYC Health Ratings",
    "default_icon": {
      "16": "icons/icon.svg",
      "32": "icons/icon.svg"
    }
  },
  "applications": {
    "gecko": {
      "id": "seamless.nyc.health.ratings@gmail.com"
    }
  }
}
