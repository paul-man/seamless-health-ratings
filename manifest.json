{
  "manifest_version": 2,
  "name": "Seamless NYC Health Ratings",
  "version": "3.1",

  "description": "Searches for NYC health ratings while browsing the Seamless website.",

  "icons": {
    "96": "icons/seamless-health-96.png",
    "48": "icons/seamless-health-48.png"
  },
  "permissions": [
    "*://seamless.com/menu*",
    "*://data.cityofnewyork.us/*",
    "activeTab",
    "tabs",
    "webRequest",
    "webNavigation",
    "storage",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.seamless.com/menu*"],
      "js": ["seamless-health.js", "lib/jquery-3.4.1.min.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js", "lib/jquery-3.4.1.min.js"],
    "persistent": true
  },
  "applications": {
    "gecko": {
      "id": "seamless.nyc.health.ratings@gmail.com"
    }
  }
}
